{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Security headers (applied to all routes)
    {
      "src": "/(.*)",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      },
      "continue": true
    },
    // Immutable caching for screenshots
    {
      "src": "/screenshots/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "X-Content-Type-Options": "nosniff"
      },
      "continue": true
    },
    // Immutable caching for assets
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    // Immutable caching for images
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|ico|svg|webp))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    // Immutable caching for CSS/JS
    {
      "src": "/(.*\\.(css|js))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    // Enable clean URLs: serve /about.html when /about is requested
    {
      "src": "/((?!.*\\.html$).*)",
      "dest": "/$1.html",
      "continue": true
    },
    // Remove trailing slash: redirect /path/ â†’ /path
    {
      "src": "/(.*)/",
      "status": 308,
      "headers": {
        "Location": "/$1"
      }
    },
    // Final catch-all (optional, often not needed due to static build)
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}